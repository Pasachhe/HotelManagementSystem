@model IEnumerable<HotelManagementSystem.Models.Hotel>

@{
    ViewBag.Title = "Index";
}

<h2>Hotels</h2>

<p>
    @Html.ActionLink("Admin", "Admin", new {  }, new { @class = "btn btn-xs btn-primary" }) |
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HotelName)
        </th>
